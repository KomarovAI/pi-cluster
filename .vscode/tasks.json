{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Ansible: Syntax Check",
      "type": "shell",
      "command": "ansible-playbook",
      "args": ["${file}", "--syntax-check"],
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "Ansible: Lint Current File",
      "type": "shell",
      "command": "ansible-lint",
      "args": ["${file}"],
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "Ansible: Run Playbook (Dry Run)",
      "type": "shell",
      "command": "ansible-playbook",
      "args": ["${file}", "--check", "-v"],
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "Git: Sync with upstream",
      "type": "shell",
      "command": "git fetch upstream && git merge upstream/master",
      "problemMatcher": []
    }
  ]
}
