{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Kubernetes: Apply",
      "type": "shell",
      "command": "kubectl apply -f ${file}",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Kubernetes: Delete",
      "type": "shell",
      "command": "kubectl delete -f ${file}",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Kubernetes: Validate",
      "type": "shell",
      "command": "kubectl apply -f ${file} --dry-run=client",
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "Flux: Check Prerequisites",
      "type": "shell",
      "command": "flux check --pre",
      "problemMatcher": []
    },
    {
      "label": "Flux: Reconcile",
      "type": "shell",
      "command": "flux reconcile source git flux-system",
      "problemMatcher": []
    },
    {
      "label": "Ansible: Syntax Check",
      "type": "shell",
      "command": "ansible-playbook ${file} --syntax-check",
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "Git: Sync with upstream",
      "type": "shell",
      "command": "git fetch upstream && git merge upstream/master",
      "problemMatcher": []
    }
  ]
}
